                                    </ProgressBar.Effect>
                                    <ProgressBar.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=MaskBorder}"/>
                                    </ProgressBar.OpacityMask>
                                </ProgressBar>
                            </Grid>
                            <StackPanel Grid.Column="1" Grid.RowSpan="2"
                                       Margin="10">
                                <Border x:Name="Practice2"
                            CornerRadius="5" Background="#FFB546" 
                            BorderBrush="#FFB546" BorderThickness="7" 
                            HorizontalAlignment="Right"
                                      
                            Padding="15,70,15,20" 
                             
                            >

                                    <Border.Effect>
                                        <DropShadowEffect Direction="270"  ShadowDepth="10" BlurRadius="10" Opacity="0.8" />
                                    </Border.Effect>
                                    <TextBlock>

                                    </TextBlock>
                                </Border>
                            </StackPanel>

                        </Grid>

                    </StackPanel>




                </Button>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="0">

                <Button x:Name="CardPractice3" Style="{StaticResource TeoryPartsButtonStyle}"
